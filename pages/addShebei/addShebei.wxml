<view class="container">
<view class='item'>
 <!-- <text>设备名称</text> -->
 <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
    <view class="picker" style='color: #333'>
        设备名称 <text style='margin-left:50rpx;'>{{array[index]}}</text>
    </view>
  </picker>
</view>
<view class='item'>
 <text>规格型号</text>
 <input placeholder='*请输入规格型号'></input>
</view>
<view class='item'>
 <text>生产厂家</text>
 <input placeholder='*请输入生产厂家'></input>
</view>
<view class='item'>
 <text>出厂编码</text>
 <input placeholder='*请输入出厂编码'></input>
</view>
<view class='item'>
 <!-- <text>出厂时间</text> -->
   <picker mode="date" value="{{time}}" start="2015-09-01" end="2017-09-01" bindchange="bindDateChange">
    <view class="picker" style='color: #333'>
        出厂时间 <text style='margin-left:50rpx;'>{{date}}</text>
    </view>
  </picker>
</view>
<view class='item'>
 <text>等级</text>
 <input placeholder='*请输入等级' type='number'></input>
</view>
<button class='register'>立即添加</button>
</view>
